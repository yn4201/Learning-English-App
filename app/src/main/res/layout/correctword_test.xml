<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manhinhcorrect"
    tools:context=".correctword_test">
    >

    <TextView
        android:id="@+id/TxtCauHoi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="268dp"
        android:layout_marginRight="80dp"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TxtTitle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtCauHoi"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="0dp"
        android:text=""
        android:textSize="25dp" />

    <EditText
        android:id="@+id/EdtTraLoi"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TxtTitle"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/TxtTitle"
        android:minHeight="48dp"
        android:textSize="25dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/BtnBackFromTest"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/back"
        android:text="Back"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/TxtNgoiSao"
        android:layout_width="15dp"
        android:layout_height="40dp"
        android:layout_marginLeft="295dp"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/star"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/star" />

    <Button
        android:id="@+id/BtnTiepTuc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdtTraLoi"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/blue"
        android:text="Skip"
        android:textSize="25dp" />


    <Button
        android:id="@+id/BtnKiemTra"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdtTraLoi"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:text="Check"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TxtDiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BtnTiepTuc"
        android:textColor="@color/blue"
        android:layout_marginTop="65dp"
        android:textAlignment="center"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/TxtThoiGian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TxtNgoiSao"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:textSize="30dp"
        tools:text="3:00" />

</RelativeLayout>